div.navbsr.navbar-static-top.root__nav
    .container
        ul.nav.navbar-nav
            li
                a.btn.btn-sm.disabled(href='#' translate="ROOT_MENU_LOGIN")
            li
                a.btn.btn-sm(href="#/" translate="ROOT_MENU_CATALOGUE")
            li
                a.btn.btn-sm(ui-sref="about" translate="ROOT_MENU_ABOUT")

        ul.nav.navbar-nav.navbar-right
            li(uib-dropdown is-open="status.isopen")
                a.btn.btn-sm(href='' id="language-dropdown" uib-dropdown-toggle)
                    | {{ 'ROOT_MENU_LANG' | translate }}
                    | &nbsp;
                    span.caret
                ul(uib-dropdown-menu aria-labelledby="language-dropdown")
                    li
                        a(href="" ng-click="menu.changeLanguage('ru')" translate="ROOT_MENU_LANG_RU")
                    li
                        a(href="" ng-click="menu.changeLanguage('en')" translate="ROOT_MENU_LANG_EN")
